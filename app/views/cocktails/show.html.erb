<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
    <h4><%= dose.description %> - <%= dose.ingredient.name %></h4>
    </li>
  <% end %>
  </ul>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id) %>
  <%= link_to "Back", cocktails_path %>
</div>
